FROM {{ container.base_image }}

{% if container.package_manager == 'apk' %}
# Installa pacchetti Alpine
RUN apk add --no-cache {% for pkg in container.packages %}{{ pkg }} {% endfor %}

# Crea utente {{ container.ssh_user }}
RUN adduser -D -s /bin/sh {{ container.ssh_user }} && \
    echo "{{ container.ssh_user }} ALL=(ALL) NOPASSWD:ALL" > /etc/sudoers.d/{{ container.ssh_user }} && \
    chmod 0440 /etc/sudoers.d/{{ container.ssh_user }}

# Configura SSH
RUN mkdir -p /home/{{ container.ssh_user }}/.ssh && \
    chmod 700 /home/{{ container.ssh_user }}/.ssh && \
    ssh-keygen -A && \
    sed -i 's/#PermitRootLogin prohibit-password/PermitRootLogin no/' /etc/ssh/sshd_config && \
    sed -i 's/#PubkeyAuthentication yes/PubkeyAuthentication yes/' /etc/ssh/sshd_config

# Copia la chiave pubblica
COPY id_rsa.pub /home/{{ container.ssh_user }}/.ssh/authorized_keys

RUN chown -R {{ container.ssh_user }}:{{ container.ssh_user }} /home/{{ container.ssh_user }}/.ssh && \
    chmod 600 /home/{{ container.ssh_user }}/.ssh/authorized_keys

# Esponi porte
EXPOSE 22
{% if container.app_port is defined %}
EXPOSE {{ container.app_port }}
{% endif %}

# Avvia SSH
CMD ["/usr/sbin/sshd", "-D"]


